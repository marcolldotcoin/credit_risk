{%endif%}





<script>
document.addEventListener("DOMContentLoaded", function () {
    // ðŸ”¹ Aggiunge un ID a tutti i link che non ne hanno uno
    document.querySelectorAll("a").forEach((link, index) => {
        if (!link.id) {
            link.id = "link-" + index;
        }

        // ðŸ”¹ Quando l'utente clicca su un link, salva l'ID nel URL
        link.addEventListener("click", function () {
            let targetId = link.id;
            history.replaceState(null, null, "#" + targetId);
        });
    });

    // ðŸ”¹ Se l'URL contiene un hash (#...), forza lo scroll al punto esatto
    if (window.location.hash) {
        let targetElement = document.querySelector(window.location.hash);
        if (targetElement) {
            setTimeout(() => {
                targetElement.scrollIntoView({ behavior: "instant" });
            }, 100);
        }
    }
});

// ðŸ”¹ Funzione per tornare indietro e riportare lo scroll esattamente dove si era
function goBackWithScroll() {
    if (window.location.hash) {
        history.back();
        setTimeout(() => {
            let targetElement = document.querySelector(window.location.hash);
            if (targetElement) {
                targetElement.scrollIntoView({ behavior: "instant" });
            }
        }, 100);
    } else {
        history.back();
    }
}
</script>

